doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title AI Models | #{title}
    link(rel="icon" href="/img/images/logo.png")
    link(rel="stylesheet" href="/styles/tailwind.css")
    script(src="/js/home.js" defer)
    script(src="/js/model.js" defer)
  body
    // ========================================== Nav Bar ==========================================
    nav(class="flex justify-between h-20 shadow-xl")
      div(class="p-4 w-28 flex items-center")
        img(src="/img/images/logo.png" class="w-full h-auto cursor-pointer" alt="Logo")
      div(class="p-6")
        img(src="../images/open.svg" id="open_icon" onclick="handleClickOpen()" class="w-8 min-800:hidden cursor-pointer")
        // Big Screen
        ul(class="flex max-800:hidden")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="/home") Home
            span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="/home#Services") Services
            span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="/home#models") Models
            span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
          li(class="mx-6 cursor-pointer text-xl relative group hover:text-blue-900")
            a(href="/profile") Profile
            span(class="absolute left-0 -bottom-1 h-0.5 w-0 bg-black transition-all duration-1000 group-hover:w-full")
        // Small Screen
        ul(id="small" class="hidden min-800:hidden w-80 max-550:w-screen bg-gray-200 relative -right-8 -top-4 z-20 h-[94vh]")
          li(class="w-full cursor-pointer p-2" onclick="handleClickClose()")
            img(src="../images/close.svg" id="close_icon" class="w-8")
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="home.pug#home" class="inline-block h-full w-full") Home
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="home.pug#Services" class="inline-block h-full w-full") Services
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="home.pug#models" class="inline-block h-full w-full") Models
          li(class="w-full hover:bg-[#2b2e34] hover:text-white cursor-pointer my-2 p-2 text-lg")
            a(href="/profile" class="inline-block h-full w-full") Profile

    // ========================================= End Nav Bar =========================================

    h2(class="text-5xl font-semibold text-center text-blue-700 m-5") Heart Disease Test
    section(class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-lg")
          h2(class="text-2xl font-bold text-gray-800 mb-6") Stroke Risk Assessment Form
          form(class="space-y-6"  action="/predict-stroke-accurance" method="POST")
            // Gender
            div(class="form-group")
              label(for="gender" class="block text-sm font-medium text-gray-700 mb-1") Gender
              select(id="gender" name="gender" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                option(value="1") Male
                option(value="0") Female
            // Age
            div(class="form-group")
              label(for="age" class="block text-sm font-medium text-gray-700 mb-1") Age
              input(
                type="number"
                id="age"
                name="age"
                value="67.0"
                step="0.1"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              )
            // Medical Conditions
            div(class="grid grid-cols-1 md:grid-cols-2 gap-4")
              div(class="form-group")
                label(for="hypertension" class="block text-sm font-medium text-gray-700 mb-1") Hypertension
                select(id="hypertension" name="hypertension" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                  option(value="0") No
                  option(value="1") Yes
              div(class="form-group")
                label(for="heart_disease" class="block text-sm font-medium text-gray-700 mb-1") Heart Disease
                select(id="heart_disease" name="heart_disease" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                  option(value="0") No
                  option(value="1") Yes
            // Marital Status
            div(class="form-group")
              label(for="ever_married" class="block text-sm font-medium text-gray-700 mb-1") Ever Married
              select(id="ever_married" name="ever_married" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                option(value="1") Yes
                option(value="0") No
            // Work Type
            div(class="form-group")
              label(for="work_type" class="block text-sm font-medium text-gray-700 mb-1") Work Type
              select(id="work_type" name="work_type" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                option(value="0") Private
                option(value="1") Self-employed
                option(value="2") Government job
                option(value="3") Never worked
                option(value="4") Children
            // Health Metrics
            div(class="grid grid-cols-1 md:grid-cols-2 gap-4")
              div(class="form-group")
                label(for="avg_glucose_level" class="block text-sm font-medium text-gray-700 mb-1") Average Glucose Level
                input(
                  type="number"
                  id="avg_glucose_level"
                  name="avg_glucose_level"
                  value="228.69"
                  step="0.01"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                )
              div(class="form-group")
                label(for="bmi" class="block text-sm font-medium text-gray-700 mb-1") BMI
                input(
                  type="number"
                  id="bmi"
                  name="bmi"
                  value="36.6"
                  step="0.1"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                )
            // Smoking Status
            div(class="form-group")
              label(for="smoking_status" class="block text-sm font-medium text-gray-700 mb-1") Smoking Status
              select(id="smoking_status" name="smoking_status" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                option(value="0") Never smoked
                option(value="1") Formerly smoked
                option(value="2") Currently smokes
                option(value="3") Unknown
            // Submit Button
            div(class="mt-8")
              button(
                type="submit"
                class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200"
              ) Get Result