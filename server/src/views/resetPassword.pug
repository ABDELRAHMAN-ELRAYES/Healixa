extends forgetPasswordPage 
block content 
    form(action='/users/reset-password' method='POST' class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md")
        h1(class="text-2xl font-bold text-gray-800 mb-6 text-center") Reset Password
        
        div(class="mb-4")
            label(for='password' class="block text-sm font-medium text-gray-700 mb-1") 
                | New Password
            input(
                type='password'
                name='password'
                placeholder='Enter new password'
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            )
    
        div(class="mb-6")
            label(for='passwordConfirm' class="block text-sm font-medium text-gray-700 mb-1")
                | Confirm New Password
            input(
                type='password'
                name='passwordConfirm'
                placeholder='Confirm new password'
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            )
    
        input(
            type='text'
            name='token'
            value=token
            class="hidden"
        )
    
        button(
            type='submit'
            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
        ) Reset